{
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "assets": ["**/*.yml"],
    "watchAssets": true,
    "plugins": [
      {
        "name": "@nestjs/graphql",
        "options": {
          "typeFileNameSuffix": [".entity.ts", ".dto.ts", ".model.ts", ".input.ts", ".args.ts"],
          "introspectComments": true
        }
      }
    ]
  }
}
